@model LojaOnline.Models.ApplicationUser

@{
    ViewBag.Title = "Editar dados";
}


<h3>@ViewBag.Title</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    //manda um alerta se os dados tiverem sido alterados com sucesso
    if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" id="Mensagem" aria-label="close">&times;</a>
            @TempData["Sucesso"]
        </div>
    }

    <div class="form-horizontal">
        <hr  />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.NomeProprio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.NomeProprio, new { htmlAttributes = new { @class = "form-control", maxlength = 30 } })
                @Html.ValidationMessageFor(model => model.NomeProprio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apelido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Apelido, new { htmlAttributes = new { @class = "form-control", maxlength = 30 } })
                @Html.ValidationMessageFor(model => model.Apelido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NIF, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.NIF, new { htmlAttributes = new { @class = "form-control", maxlength = 9} })
                @Html.ValidationMessageFor(model => model.NIF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Morada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Morada, new { htmlAttributes = new { @class = "form-control", maxlength = 40 } })
                @Html.ValidationMessageFor(model => model.Morada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodPostal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.CodPostal, new { htmlAttributes = new { @class = "form-control", maxlength = 30 } })
                @Html.ValidationMessageFor(model => model.CodPostal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Voltar atrás", "Index")
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.EmailConfirmed, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.SecurityStamp, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.LockoutEnabled, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.LockoutEndDateUtc, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.PhoneNumberConfirmed, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.TwoFactorEnabled, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.AccessFailedCount, new { htmlAttributes = new { @class = "form-control" } })

    @Html.HiddenFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })


}