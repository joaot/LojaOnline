@model IEnumerable<LojaOnline.Models.Produto>
@{
    ViewBag.Title = "ListaProdutos";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet">

<link href="~/Content/Site.css" rel="stylesheet">

@Html.Partial("_Menu")

<div class="col-md-9">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content(item.Imagem)" alt="" />
                    <div class="caption">
                        <h4 class="pull-right">@item.Preco€</h4>
                        <h4>
                            <a href="@Url.Action("Descricao", "Produtos", new {id = item.ProdutoID })">@item.Nome</a>
                        </h4>
                        <p>
                            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("AdicionarProduto", "Compras",new {id = item.ProdutoID } )'">Comprar</button>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
 </div>