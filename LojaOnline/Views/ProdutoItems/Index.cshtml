@model IEnumerable<LojaOnline.Models.ProdutoItem>

@{
    ViewBag.Title = "Index";
}

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" id="Mensagem" aria-label="close">&times;</a>
            @TempData["Sucesso"]
        </div>
    }

<p>
    <button type="button" class="btn btn-primary btn-sm" style="margin-left:20px; margin-bottom:-10px; margin-top:10px" onclick="location.href='@Url.Action("Create", "ProdutoItems")'">Novo Produto</button>
</p>


<div class="row">
    <div class="col-md-10">
        <div class="panel-heading">
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover text-center">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Produto.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.numeroSerie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Produto.Preco)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.Produto.Imagem)" height="60" width="60" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.numeroSerie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Preco)€
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.produtoID }) |
                            @Html.ActionLink("Apagar", "Delete", new { id = item.produtoID })
                        </td>
                    </tr>

                        }
                </table>
                <br />

            </div>
        </div>
    </div>