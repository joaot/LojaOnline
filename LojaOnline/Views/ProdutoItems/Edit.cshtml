@model LojaOnline.Models.ProdutoItem

@{
    ViewBag.Title = "Edit";
}

<h2>Editar produto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" id="Mensagem" aria-label="close">&times;</a>
            @TempData["Sucesso"]
        </div>
    }
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.produtoID)

        <div class="form-group">
            @Html.LabelFor(model => model.numeroSerie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
               @Html.EditorFor(model => model.numeroSerie, new { htmlAttributes = new { @class = "form-control", maxlength = 9} })
                @Html.ValidationMessageFor(model => model.numeroSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoProdutoFK, "TipoProdutoFK", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("TipoProdutoFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoProdutoFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Guardar" /> | @Html.ActionLink("Voltar atrás", "Index")
            </div>
        </div>
    </div>
}

